{
  "type": "object",
  "properties": {
    "issuelist": {
      "type": "array",
      "selectorAll": "#buglist tr[bgcolor]",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 3
          },
          "summary": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 10
          },
          "severity": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 7
          }
        }
      }
    },
    "isViewIssues": {
      "type": "identifier",
      "control": "exists",
      "selectContains": "Viewing Issues",
      "selector": ".form-title"
    }
  },
  "connect": [
    {
      "match": [
        "isViewIssues"
      ],
      "screens": [
        "viewissues"
      ]
    }
  ]
}
